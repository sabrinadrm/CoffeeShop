<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
         <link rel="stylesheet" href="{{ asset('styles/base.css') }}">
         <link rel="stylesheet" href="{{ asset('styles/atelier.css') }}">
         <link rel="stylesheet" href="{{ asset('styles/chats.css') }}">
         <link rel="stylesheet" href="{{ asset('styles/accueil.css') }}">
         <link rel="stylesheet" href="{{ asset('styles/contact.css') }}">
         <link rel="stylesheet" href="{{ asset('styles/reservation.css') }}">
         <link rel="stylesheet" href="{{ asset('styles/table.css') }}">
         <link rel="stylesheet" href="{{ asset('styles/tarif.css') }}">
         <link rel="stylesheet" href="{{ asset('styles/concept.css') }}">
        {% endblock %}
    <body>
             {# -- Navbar -- #}
        <nav>
            <div class="navbar">
                <div class="container nav-container">
                    <input class="checkbox" type="checkbox" name="" id="" />
                    <div class="hamburger-lines">
                        <span class="line line1"></span>
                        <span class="line line2"></span>
                        <span class="line line3"></span>
                    </div>  
                    <div class="logo">
                         <a class="navbar-brand" href="{{ path('app_accueil') }}" style="margin: 0 20px;">
                        <img src="{{ asset('image/ban/logo_n-removebg-preview.png') }}" alt="Logo de La Cour Des Chats" style="width: 100px; padding: 8px;">
                         </a>
                        </div>
                        <div class="menu-items">
                         <li class="nav-item">
                        <a class="nav-link active" href="{{path('app_accueil')}}">Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{path('app_tarif')}}">Tarif</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{path('app_chats')}}">Les chats</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{path('app_concept')}}">Concept</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{path('app_atelier')}}">Atelier</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{path('app_reservation')}}">Réserver</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{path('app_contact')}}">Contact</a>
                        </li>
                    </div>
                </div>
            </div>
         </nav>

   
        {% block body %}{% endblock %}

         <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
         <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
         <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>

           {# -- Footer -- #}
        {# {% if app.request.attributes.get('_route') not in ['app_register', 'app_login'] %} #}
        <footer class="footer">
            <!-- Logo de la Cour des Chats -->
            <div>
                <img src="{{ asset('image/footer.png') }}" alt="Logo de la Cour des Chats" style="width: 100px;">
                <p>© 2024 - La Cour des Chats</p>
            </div>

            <!-- Liens  -->
            <div>
                <h3>Liens utiles</h3>
                <ul>
                    <li><a href="#accueil">Accueil</a></li>
                    <li><a href="#services">Services</a></li>
                    <li><a href="#tarifs">Tarifs</a></li>
                    <li><a href="#contact">Contact</a></li>
                </ul>
            </div>

            <!-- Carte  -->
            <div>
                <h3>Nous trouver</h3>
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2746.7746384183043!2d0.6891786160528681!3d47.39081563373817!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47fbeafa472f2a79%3A0x292585c8a66c3aa4!2s18%20Rue%20Gambetta%2C%2037000%20Tours!5e0!3m2!1sen!2sfr!4v1642957881533!5m2!1sen!2sfr" width="400" height="300"></iframe>
            </div>
        </footer>
    </body>
</html>
